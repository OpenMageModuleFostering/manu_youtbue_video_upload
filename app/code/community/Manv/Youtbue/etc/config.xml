<?xml version="1.0"?>
<config>
  <modules>
    <Manv_Youtbue>
      <version>1.1.3</version>
    </Manv_Youtbue>
  </modules>
  <frontend>
    <routers>
      <youtbue>
        <use>standard</use>
          <args>
            <module>Manv_Youtbue</module>
            <frontName>youtbue</frontName>
          </args>
      </youtbue>
    </routers>
		<layout>
		  <updates>
			<youtbue>
			  <file>youtbue.xml</file>
			</youtbue>
		  </updates>
		</layout>
  </frontend>
  <global>
    <helpers>
      <youtbue>
        <class>Manv_Youtbue_Helper</class>
      </youtbue>
    </helpers>
	<blocks>
	  <youtbue>
		<class>Manv_Youtbue_Block</class>
	  </youtbue>
	</blocks>
	<models>
	  <youtbue>
		<class>Manv_Youtbue_Model</class>
		<resourceModel>youtbue_mysql4</resourceModel>
	  </youtbue>
	  <youtbue_mysql4>
		<class>Manv_Youtbue_Model_Mysql4</class>
		<entities>		  
			  <youtbue>
				<table>manvvideogallery</table>
			  </youtbue>
        </entities>
	  </youtbue_mysql4>
	</models>
	<resources>
	  <youtbue_setup>
		<setup>
		  <module>Manv_Youtbue</module>
		</setup>
		<connection>
		  <use>core_setup</use>
		</connection>
	  </youtbue_setup>
	  <youtbue_write>
		<connection>
		  <use>core_write</use>
		</connection>
	  </youtbue_write>
	  <youtbue_read>
		<connection>
		  <use>core_read</use>
		</connection>
	  </youtbue_read>
	</resources>
  </global>
  <admin>
	<routers>
	  <youtbue>
	    <use>admin</use>
		<args>
		  <module>Manv_Youtbue</module>
		  <frontName>youtbue</frontName>
		</args>
	  </youtbue>
	</routers>
  </admin>
  <adminhtml>
	<menu>
	  <youtbue module="youtbue">
		<title>Youtbue</title>
		<sort_order>100</sort_order>
		<children>
		  <youtbue module="youtbue">
		    <title>Manage Youtbue</title>
			<sort_order>0</sort_order>
			<action>youtbue/adminhtml_youtbue</action>
		  </youtbue>
		</children>
	  </youtbue>
	</menu>
	<acl>
	  <resources>
		<all>
		  <title>Allow Everything</title>
		</all>
		<admin>
		  <children>
			<youtbue translate="title" module="youtbue">
			  <title>Youtbue</title>
			  <sort_order>1000</sort_order>
			  <children>
		  <youtbue translate="title">
			<title>Manage Youtbue</title>
			<sort_order>0</sort_order>
		  </youtbue>
			  </children>
			</youtbue>
		  </children>
		</admin>
	  </resources>
	</acl>
	<layout>
	  <updates>
		<youtbue>
		  <file>youtbue.xml</file>
		</youtbue>
	  </updates>
	</layout>
  </adminhtml>
</config> 